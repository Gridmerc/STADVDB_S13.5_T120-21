<html>
    <head>
        <title> One Table - First Query </title>
    
        <!-- Botstrap CSS -->
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
        <!-- JavaScript Bundle with Popper -->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW" crossorigin="anonymous"></script>
        <!-- FontAwesome for icons -->
        <link href="https://use.fontawesome.com/releases/v5.0.4/css/all.css" rel="stylesheet">
        <!-- Custom CSS -->
        <link rel="stylesheet" href="/css/style.css"/>
        <!-- JQUERY -->
        <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
        <!-- Custom JS -->
        <script src="/js/script.js"></script>
    </head>
    <body style="background-color:#e5e7d2;">
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
            <span class="navbar-brand mb-0 h1"> STADVDB </span>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                <div class="navbar-nav">
                    <a class="nav-item nav-link" href="/"> Home <span class="sr-only">(current)</span></a>
                </div>
            </div>
        </nav>
        <div>
        <h1 style="margin-left:10%; margin-top:5%; font-family:Courier New;"> One Table - First Query </h1>
        <div class="container">
            <form method= "POST" action="/oneTableOne">
                <div class = "row">
                    <label for="age"> Age: </label>
                    <input type ="number" style="margin-left:10%; margin-top:1%;" name ="age">
                    <select name="comparison" style="margin-left: 1%; margin-bottom: 2%;">
                        <option value=">"> More than </option>
                        <option value="<"> Less than </option>
                        <option value="="> Equal to </option>
                    </select>
                    <input type="submit" style="margin-left:1%;">
                </div>
            </form>
        </div>
        <div class="container">
            <div class="table-data-name-age-marital">
                <h2 style="text-align: center;"> Client Name, Age and Marital Status Based from Age </h2>
                    <table class="table table-dark table-bordered table-hover table-sm">
                        <thead class="thead-dark">
                            <tr>
                                <th> Client Name </th>
                                <th> Client Age </th>
                                <th> Client Marital Status </th>
                            </tr>
                        </thead>
                        <tbody>
                            <%
                            if(userData.length!=0){
                            var i=1;
                            userData.forEach(function(data){
                            %>

                            <tr>
                                <td><%= data.client_name %></td>
                                <td><%= data.age %></td>
                                <td><%= data.marital_status %></td>
                            </tr>
                            <%  i++; }) %>
                            <% } else{ %>
                            <tr>
                                <td colspan="7"> No Data Found </td>
                            </tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </body>
</html>